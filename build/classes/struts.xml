<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />
	<package name="com.diworksdev.ecsite.action" extends="struts-default">

		<!-- UserCreateAction -->
		<action name="UserCreateAction" class="com.diworksdev.account.action.UserCreateAction" method="execute">
			<result name="success">userCreate.jsp</result>
			<result name="error">authorityError.jsp</result>
		</action>

		<!-- UserCreateConfirmAction -->
		<action name="UserCreateConfirmAction" class="com.diworksdev.account.action.UserCreateConfirmAction" method="execute">
			<result name="success">userCreateConfirm.jsp</result>
			<result name="error">userCreateError.jsp</result>
		</action>

		<!-- UserCreateGoBackAction  -->
		<action name="UserCreateGoBackAction" class="com.diworksdev.account.action.UserCreateGoBackAction" method="execute">
			<result name="success">userCreateGoBack.jsp</result>
		</action>

		<!-- UserCreateCompleteAction -->
		<action name="UserCreateCompleteAction" class="com.diworksdev.account.action.UserCreateCompleteAction" method="execute">
			<result name="success">userCreateComplete.jsp</result>
			<result name="error">error.jsp</result>
		</action>

		<!-- HomeAction -->
		<action name="HomeAction" class="com.diworksdev.account.action.HomeAction" method="execute">
			<result name="success">home.jsp</result>
		</action>

		<!-- AccountListAction -->
		<action name="AccountListAction" class="com.diworksdev.account.action.AccountListAction" method="execute">
			<result name="success">accountList.jsp</result>
			<result name="error">authorityError.jsp</result>
		</action>

		<!-- DeleteAction -->
		<action name="DeleteAction" class="com.diworksdev.account.action.DeleteAction" method="execute">
			<result name="success">delete.jsp</result>
			<result name="error">authorityError.jsp</result>
		</action>

		<!-- DeleteConfirmAction -->
		<action name="DeleteConfirmAction" class="com.diworksdev.account.action.DeleteConfirmAction" method="execute">
			<result name="success">deleteConfirm.jsp</result>
		</action>

		<!-- DeleteCompleteAction -->
		<action name="DeleteCompleteAction" class="com.diworksdev.account.action.DeleteCompleteAction" method="execute">
			<result name="success">deleteComplete.jsp</result>
			<result name="error">deleteError.jsp</result>
		</action>

		<!-- UpdateAction -->
		<action name="UpdateAction" class="com.diworksdev.account.action.UpdateAction" method="execute">
			<result name="success">update.jsp</result>
			<result name="error">authorityError.jsp</result>
		</action>

		<!-- UpdateConfirmAction -->
		<action name="UpdateConfirmAction" class="com.diworksdev.account.action.UpdateConfirmAction" method="execute">
			<result name="success">updateConfirm.jsp</result>
			<result name="error">updateInputError.jsp</result>
		</action>

		<!-- UpdateGoBackAction  -->
		<action name="UpdateGoBackAction" class="com.diworksdev.account.action.UpdateGoBackAction" method="execute">
			<result name="success">updateGoBack.jsp</result>
		</action>

		<!-- UpdateCompleteAction -->
		<action name="UpdateCompleteAction" class="com.diworksdev.account.action.UpdateCompleteAction" method="execute">
			<result name="success">updateComplete.jsp</result>
			<result name="error">updateError.jsp</result>
		</action>

		<!-- UpdatePasswordAction -->
		<action name="UpdatePasswordAction" class="com.diworksdev.account.action.UpdatePasswordAction" method="execute">
			<result name="success">updatePassword.jsp</result>
		</action>

		<!-- UpdatePasswordConfirmAction -->
		<action name="UpdatePasswordConfirmAction" class="com.diworksdev.account.action.UpdatePasswordConfirmAction" method="execute">
			<result name="success">updatePasswordConfirm.jsp</result>
			<result name="error">updatePasswordError.jsp</result>
		</action>

		<!-- UpdatePasswordCompleteAction -->
		<action name="UpdatePasswordCompleteAction" class="com.diworksdev.account.action.UpdatePasswordCompleteAction" method="execute">
			<result name="success">updateComplete.jsp</result>
			<result name="error">updateError.jsp</result>
		</action>

		<!-- UpdatePasswordGoBackAction  -->
		<action name="UpdatePasswordGoBackAction" class="com.diworksdev.account.action.UpdatePasswordGoBackAction" method="execute">
			<result name="success">updatePasswordGoBack.jsp</result>
		</action>

		<!-- LoginAction -->
		<action name="LoginAction" class="com.diworksdev.account.action.LoginAction" method="execute">
			<result name="success">home.jsp</result>
			<result name="error">login.jsp</result>
		</action>

	</package>
</struts>
